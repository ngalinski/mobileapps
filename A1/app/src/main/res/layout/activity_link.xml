<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkCollectorFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/links_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_link_float_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="linkCollectorOnClick"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/links_rv"
        app:layout_constraintEnd_toStartOf="@+id/links_rv"
        app:layout_constraintStart_toEndOf="@+id/links_rv"
        app:layout_constraintTop_toBottomOf="@+id/links_rv"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.92"
        app:srcCompat="@android:drawable/ic_input_add" />
</androidx.constraintlayout.widget.ConstraintLayout>